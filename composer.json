{
    "name": "johhann/vendors-for-suppliers-api",
    "version": "0.0.1",
    "description": "vendor records management for suppliers interacting with logistics facilities",
    "keywords": [
        "fleetbase",
        "fleetbase-extension",
        ""
    ],
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "johhann",
            "email": "johannesm1219@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "fleetbase/core-api": "*",
        "php-http/guzzle7-adapter": "^1.0",
        "psr/http-factory-implementation": "*",
        "simplesoftwareio/simple-qrcode": "^4.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.34.1",
        "nunomaduro/collision": "^5.11.0|^6.4.0",
        "pestphp/pest": "^1.22.6",
        "phpstan/phpstan": "^1.10.38",
        "symfony/var-dumper": "^5.4.29"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/johann/fleetbase-vendor-for-suppliers"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fleetbase\\VendorsForSuppliers\\": "server/src/",
            "Fleetbase\\VendorsForSuppliers\\Seeds\\": "server/seeds/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fleetbase\\VendorsForSuppliers\\Tests\\": "server/tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "Fleetbase\\VendorsForSuppliers\\Providers\\VendorsForSuppliersServiceProvider"
            ]
        }
    },
    "config": {
        "vendor-dir": "./server_vendor",
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi --memory-limit=0",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
